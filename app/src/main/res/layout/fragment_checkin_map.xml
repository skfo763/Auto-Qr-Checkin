<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="parentViewModel"
            type="com.skfo763.qrcheckin.lockscreen.viewmodel.LockScreenViewModel" />

    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.skfo763.component.checkmap.CheckInMapView
            android:id="@+id/checkin_map_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            location="@{parentViewModel.location}"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/checkin_map_go_current_location"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_margin="20dp"
            android:elevation="2dp"
            android:foreground="?attr/selectableItemBackground"
            android:onClick="@{(v) -> parentViewModel.requestLastKnownLocation()}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/ic_baseline_my_location_24"
            android:background="@drawable/background_map_current_location"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
